<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    >

    <Style x:Key="NoteControlStyle" TargetType="UserControl">
        <Setter Property="BorderBrush" Value="{DynamicResource DefaultNoteBorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style x:Key="NotePopupBoxStyle" TargetType="materialDesign:PopupBox">
        <Setter Property="PlacementMode" Value="BottomAndAlignRightEdges"/>
        <Setter Property="StaysOpen" Value="False"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="StaysOpen" Value="False"/>
    </Style>
    
    <Style x:Key="NoteRichTextBoxStyle" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="0 0.8 0 0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="AcceptsReturn" Value="True"/>
    </Style>




</ResourceDictionary>